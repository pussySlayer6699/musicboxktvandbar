  <script>
      (function(d, s, id){
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {return;}
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/messenger.Extensions.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'Messenger'));

    const APP_ID = 544769076153407;    
    var senderID = "";
    
    window.extAsyncInit = function() {
        MessengerExtensions.getContext(APP_ID, 
          function success(thread_context){
           senderID = thread_context.psid;
          },
          function error(err){
            console.log(err);
          }
        );        
    };
  </script>
  
 
  <div class="container">
  <form class="form-horizontal" role="form" id="form" method="post" action="../updatereservation">
  <h1 style="text-align:center; color:black;">Edit Reservation</h1>

  <div class="form-group">
    <label for="name" class="col-sm-3 control-label">Name:</label>
    <div class="col-sm-9">
    <input type="text" class="form-control" name="name" value="<%= data.name %>" autofocus>    
  </div>

  <div class="form-group">
    <label for="name" class="col-sm-3 control-label">Phone:</label>
    <div class="col-sm-9">
    <input type="text" class="form-control" name="phone" value="<%= data.phone %>"> 
    </div>   
  </div>

  <div class="input-group mb-3">
    <label class="col-sm-3 control-label" for="package">Package:</label>
    <select class="custom-select" name="package" id="package" value="<%= data.package %>">
    <option value="1">bronze</option>
    <option value="2">silver</option>
    <option value="3">gold</option>
    <option value="4">platinum</option>
    <option value="5">penthouse</option>
    </select>   
  </div>

  <div class="form-group">
    <label for="name" class="col-sm-3 control-label">Date:</label>
    <div class="col-sm-9">
    <input type="text" class="form-control" name="date" value="<%= data.date %>"> 
    </div>   
  </div>

  <div class="form-group">
    <label for="name" class="col-sm-3 control-label">Time:</label>
    <div class="col-sm-9">
    <input type="text" class="form-control" name="time" value="<%= data.time %>">
    </div>
  </div>

  <div class="form-group">
    <label for="name" class="col-sm-3 control-label">Sections:</label>
    <div class="col-sm-9">
    <input type="text" class="form-control" name="sections" value="<%= data.sections %>">
    </div>    
  </div>

  <div class="form-group">
    <label for="name" class="col-sm-3 control-label">Message:</label>
    <div class="col-sm-9">
    <textarea name="message" rows="3" cols="50"><%= data.message %></textarea>
    </div> 
  </div>
  
  <div class="input-group mb-3">
    <label for="status" class="col-sm-3 control-label">Status:</label>
    <select class="custom-select" name="status" id="status">    
    <option value="pending"
    <%if(data.status == "pending"){%>
        <%="selected"%>
    <%}%>
    >Pending</option>
    <option value="confirmed"
    <%if(data.status == "confirmed"){%>
        <%="selected"%>
    <%}%>
    >Confirm</option>
    <option value="canceled"
    <%if(data.status == "canceled"){%>
        <%="selected"%>
    <%}%>
    >Cancel</option>
   
  </select>   
  </div>
  <div class="form-group">
    <label for="name" class="col-sm-3 control-label">Comment:</label>
    <div class="col-sm-9">
    <textarea name="comment" rows="3" cols="50"></textarea>      
  </div>

  
  <input type="hidden"  name="doc_id" value="<%= data.doc_id %>">
  <input type="hidden"  name="ref" value="<%= data.ref %>">

  <div class="form-group">
  <input type="submit" value="Submit" class="btn btn-primary btn-block">
  </div> 
  </form>

