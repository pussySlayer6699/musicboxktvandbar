<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Reservations</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  
<style>
  .button {
  background-color:#566573 ;
  border:1px solid #566573 ;
  display:inline-block;
  cursor:pointer;
  color:#ffffff;
  font-family:Arial;
  font-size:15px;
  padding:5px 8px;
  text-decoration:none;
  text-shadow:0px 1px 0px #2f6627;
}
.button:hover {
  background-color:#959089;
}
.button:active {
  position:relative;
  top:1px;
}

.button1 {
  background-color:#0099FF ;
  border:1px solid #0099FF ;
  cursor:pointer;
  color:#ffffff;
  font-family:Arial;
  font-size:15px;
  padding:6px 12px;
  text-decoration:none;
  text-shadow:0px 1px 0px #353739;

}
.button1:hover {
  background-color:#6FC5FF;
}
.button1:active {
  position:relative;
  top:1px;
}

body {
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}

.topnav {
  overflow: hidden;
  background-color: #36393B;
}

.topnav a {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 10px 14px;
  text-decoration: none;
  font-size: 17px;

}

.topnav a:hover {
  background-color: #ddd;
  color: black;
}

.topnav a.active {
  background-color: #4CAF50;
  color: white;
}

.topnav-right {
  float: right;
}


</style>
 </head>

  <body style = "background-color: #F2AA4CFF;">

  <h1 style="text-align:center;">Reservations</h1>

<div class="topnav">
  <a class="active" href="reservations">Reservations</a>
  <a href="reqsongs">Song Requests</a>
  <div class="topnav-right">
    <a href="/logout" class="button1">Log out</a>
  </div>
</div>

<br>
  
  <table cellspacing="1" cellpadding="5" border="1" class="table table-dark table-striped">
    <tr style = "background-color: #52BE80;">
    <th style="width:140px;">Name</th>
    <th>Phone</th>
    <th>Package</th>   
    <th style="width:125px;">Date</th>
    <th>Time</th>
    <th style="width:30px;">Sections</th>
    <th>Message</th>
    <th style="width:60px;">Reference</th>
    <th>Status</th>
    <th style="width:270px;">Comment</th>
    <th style="width:150px;">Action</th>
  </tr>


  <% data.forEach(function(reservation){ %>
     <tr>   
       <td><%= reservation.name %></td>
       <td><%= reservation.phone %></td>
       <td><%= reservation.package %></td>
       <td><%= reservation.date %></td>
       <td><%= reservation.time %></td>
       <td><%= reservation.sections %></td>
       <td><%= reservation.message %></td>
       <td><%= reservation.ref %></td>
       <td><%= reservation.status %></td>
       <td><%= reservation.comment %></td>
       <td><a href="updatereservation/<%= reservation.doc_id %>" class="button">Edit</a> | <a href="delete_reservation/<%= reservation.doc_id %>" class="button">Delete</a></td>
     </tr>
  <% }); %>

	</table>

  </body>

</html>
